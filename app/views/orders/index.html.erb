<h1>Listing orders</h1>

<table>
  <tr>
    <th>Client</th>
    <th>Time</th>
    <th>Date</th>
    <th>Number</th>
    <th>Comment</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.client_id %></td>
    <td><%= order.time %></td>
    <td><%= order.date %></td>
    <td><%= order.number %></td>
    <td><%= order.comment %></td>
    <td><%= order.status %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

